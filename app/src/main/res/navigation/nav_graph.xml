<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/homeFragment">

    <fragment
        android:id="@+id/homeFragment"
        android:name="com.grd.cookit.HomeFragment"
        android:label="fragment_home"
        tools:layout="@layout/fragment_home" >
        <action
            android:id="@+id/action_homeFragment_to_addEditRecipeFragment"
            app:destination="@id/addEditRecipeFragment" >
            <argument android:defaultValue="add"
                android:name="type" />
        </action>
    </fragment>
    <fragment
        android:id="@+id/addEditRecipeFragment"
        android:name="com.grd.cookit.AddEditRecipeFragment"
        android:label="fragment_add_edit_recipe"
        tools:layout="@layout/fragment_add_edit_recipe" >
        <argument
            android:name="type"
            app:argType="string"/>
    </fragment>
</navigation>