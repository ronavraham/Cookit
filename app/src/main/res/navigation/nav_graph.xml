<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/homeFragment">

    <fragment
        android:id="@+id/homeFragment"
        android:name="com.grd.cookit.HomeFragment"
        android:label="fragment_home"
        tools:layout="@layout/fragment_home" >
        <action
            android:id="@+id/action_homeFragment_to_addEditRecipeFragment"
            app:destination="@id/addEditRecipeFragment"
            app:enterAnim="@anim/nav_default_enter_anim"
            app:exitAnim="@anim/nav_default_exit_anim"
            app:popEnterAnim="@anim/nav_default_pop_enter_anim"
            app:popExitAnim="@anim/nav_default_pop_exit_anim"
            app:popUpTo="@+id/homeFragment">
            <argument
                android:name="type"
                android:defaultValue="add" />
        </action>
        <action
            android:id="@+id/action_homeFragment_to_mapsFragment"
            app:destination="@id/mapsFragment" />
    </fragment>
    <fragment
        android:id="@+id/addEditRecipeFragment"
        android:name="com.grd.cookit.AddEditRecipeFragment"
        android:label="fragment_add_edit_recipe"
        tools:layout="@layout/fragment_add_edit_recipe" >
        <argument
            android:name="type"
            app:argType="string"/>
    </fragment>
    <fragment
        android:id="@+id/mapsFragment"
        android:name="com.grd.cookit.fragments.MapsFragment"
        android:label="fragment_maps"
        tools:layout="@layout/fragment_maps" />
</navigation>